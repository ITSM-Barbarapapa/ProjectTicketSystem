<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
          fx:controller="com.projectticketsystem.ui.ArchiveDatabaseController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="940.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="540.0" prefHeight="100.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <children>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #DAE3D9;" GridPane.rowIndex="1">
            <children>
                <ImageView fitHeight="44.0" fitWidth="44.0" layoutX="12.0" layoutY="14.0"
                           onMouseClicked="#onHouseIconClick" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../../img/Home-button-img.png"/>
                </ImageView>
            </children>
        </Pane>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #93C98E;" GridPane.columnIndex="1">
            <children>
                <Circle fill="#d9d9d9" layoutX="911.0" layoutY="30.0" radius="22.0" stroke="#d9d9d9"
                        strokeType="INSIDE"/>
                <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="719.0"
                       layoutY="17.0" prefHeight="27.0" prefWidth="162.0" text="username">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #93C98E;">
            <children>
                <ImageView fitHeight="97.0" fitWidth="146.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../../img/green-desk.png"/>
                </ImageView>
            </children>
        </Pane>
        <GridPane hgap="10.0" style="-fx-background-color: #FBFBFB;" vgap="10.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0" prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="0.0" prefWidth="80.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="80.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="BOTTOM_CENTER" contentDisplay="CENTER" text="Archiveer Database"
                       GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER"
                       GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                    <font>
                        <Font size="27.0"/>
                    </font>
                </Label>
                <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.columnSpan="2"
                      GridPane.rowIndex="1">
                    <children>
                        <TableView stylesheets="@style-dashboard.css">
                            <columns>
                                <TableColumn prefWidth="75.0" text="id"/>
                                <TableColumn prefWidth="98.0" text="Naam"/>
                                <TableColumn prefWidth="75.0" text="Status"/>
                                <TableColumn prefWidth="75.0" text="Datum"/>
                                <TableColumn prefWidth="75.0" text="Contact"/>
                                <TableColumn prefWidth="75.0" text="Prioriteit"/>
                                <TableColumn prefWidth="118.0" text="Samenvatting"/>
                            </columns>
                        </TableView>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onArchiveButtonClick"
                                        stylesheets="@style-dashboard.css" text="Archiveer"/>
                                <TextField onAction="#onSearchFieldTextChange" promptText="Zoek"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </GridPane>
    </children>
